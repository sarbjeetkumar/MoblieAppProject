<Page
    x:Class="LearnYourAlphabet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnYourAlphabet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background >
            <ImageBrush ImageSource="/AppSoundsAndImages/Images/background.jpg"/>
        </Grid.Background>

        <Button Name="StartButton" 
                Content=" Press to Start" 
                Background="LightGreen" 
                BorderBrush="AliceBlue" 
                BorderThickness="3" 
                FontSize="15"
                FontWeight="SemiBold" 
                FontStyle="Oblique"
                Margin="350,100,80,50"
                Click="StartButton_Click"
                />
        <Button Name="ExitButton" 
                Content=" Press to Exit" 
                Background="LightGreen" 
                BorderBrush="AliceBlue" 
                BorderThickness="3" 
                FontSize="15"
                FontWeight="SemiBold" 
                FontStyle="Oblique"
                Margin="350,190,150,50"
                Click="ExitButton_Click"
                />


    </Grid>
</Page>
