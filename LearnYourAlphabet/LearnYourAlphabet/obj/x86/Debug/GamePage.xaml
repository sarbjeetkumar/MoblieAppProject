<Page x:ConnectionId='1'
    x:Class="LearnYourAlphabet.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnYourAlphabet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:LearnYourAlphabet.Models"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'  Name="SarabGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


        <Line/>
        <Line/>
        <Line/>
        <Line/>

        <RelativePanel >
            <Button x:ConnectionId='9' Name="BackButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                                            
                    FontFamily="Segoe Mdl2 Assets"
                    Content="&#xE0A6;"
                    Height="40"
                    Width="40">
                       
            </Button>
           
        </RelativePanel>
        
        <SplitView x:ConnectionId='3' Grid.Row="1"
                   Name="mySplitView">
            
            
            <SplitView.Pane>
                <ListView x:ConnectionId='4' Name="MyListView"
                      IsItemClickEnabled="True"
                                                      
                    >
                </ListView>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <MediaElement x:ConnectionId='5' Name="MyMediaElement"
                                  AutoPlay="True"/>

                    <TextBlock x:ConnectionId='6' Name="LetterTextBlock"
                                Margin="20,0,0,0"
                                Text="Learn Your Alphabets"
                                FontSize="25"
                                FontStyle="Oblique"
                                Foreground="Blue"
                               HorizontalAlignment="Center">
                    </TextBlock>



                    <GridView x:ConnectionId='7' Grid.Row="1" Margin="30,20,20,20"
                              Name="AlphabetSoundGridView"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                                                           
                                                                         
                              
                              >

                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='8' Name="MyImage"
                                        Height="110"
                                       Width="100"
                                                                  
                                       >
                                    
                                </Image>
                                
                            </DataTemplate>
           
                            
                        </GridView.ItemTemplate>  
                        
                        
                    </GridView>
                </Grid>
            </SplitView.Content>

        </SplitView>

    </Grid>
</Page>

